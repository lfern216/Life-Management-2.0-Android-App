<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sprint_setting15"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:textAppearanceMedium"
        android:textColor="#066408"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="Sprint Settings"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/sprintGoalQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:textAppearanceMedium"
        android:textSize="19sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="What is the goal of this sprint?"/>

    <EditText
        android:id="@+id/sprintGoalA"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:inputType="text"
        android:textSize="19sp"
        android:backgroundTint="#066408"
        android:textCursorDrawable="@drawable/color_green_cursor"
        android:layout_height="40dp"
        android:hint="Enter goal"
        android:layout_marginTop="-10dp"
        android:allowUndo="false"
        />

    <TextView
        android:id="@+id/sprintPeriodQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:textAppearanceMedium"
        android:textSize="19sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="How many weeks would you like this sprint to be?"/>

    <RadioGroup
        android:id="@+id/sprintPeriodButtonsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_margin="15dp"
        android:paddingRight="50dp">

        <RadioButton
            android:id="@+id/sprintPeriod1"
            style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:buttonTint="@color/colorGreen"
            android:textSize="19sp"
            />

        <RadioButton
            android:id="@+id/sprintPeriod2"
            style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:buttonTint="@color/colorGreen"
            android:textSize="19sp"
            />

        <RadioButton
            android:id="@+id/sprintPeriod3"
            style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:buttonTint="@color/colorGreen"
            android:textSize="19sp"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sprintStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Sprint start date:"
            style="?android:textAppearanceMedium"
            android:padding="10dp" />

        <TextView
            android:id="@+id/sprintStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#000000"

            android:hint="Select date"
            style="?android:textAppearanceMedium"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sprintEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Sprint end date:"
            style="?android:textAppearanceMedium"
            android:padding="10dp" />

        <TextView
            android:id="@+id/sprintEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="19sp"
            android:textColor="#000000"

            android:hint="Select date"
            style="?android:textAppearanceMedium"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            style="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Swipe to go to the next page"
            android:textStyle="bold"
            android:textSize="24sp"
            />

    </LinearLayout>

</LinearLayout>